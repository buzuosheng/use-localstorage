{
  "version": "2.2.2",
  "keywords": [
    "react",
    "hooks",
    "localstorage"
  ],
  "homepage": "https://github.com/buzuosheng/use-localstorage",
  "repository": {
    "type": "git",
    "url": "https://github.com/buzuosheng/use-localstorage.git"
  },
  "license": "MIT",
  "main": "dist/use-localstorage.cjs.production.min.js",
  "module": "dist/use-localstorage.esm.js",
  "typings": "dist/use-localstorage.d.ts",
  "private": false,
  "packageManager": "pnpm@8.6.11",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --entry src/use-localstorage.ts --format cjs,esm",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src --fix",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@buzuosheng/use-localstorage",
  "author": "buzuosheng",
  "size-limit": [
    {
      "path": "dist/use-localstorage.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@size-limit/preset-small-lib": "^10.0.2",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addons": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/ms": "^0.7.34",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "babel-loader": "^9.1.3",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "rollup": "^4.3.0",
    "size-limit": "^10.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0"
  },
  "dependencies": {
    "ms": "^2.1.3"
  }
}
