{
  "version": "2.2.2",
  "keywords": [
    "react",
    "hooks",
    "localstorage"
  ],
  "homepage": "https://github.com/buzuosheng/use-localstorage",
  "repository": {
    "type": "git",
    "url": "https://github.com/buzuosheng/use-localstorage.git"
  },
  "license": "MIT",
  "main": "dist/use-localstorage.cjs.production.min.js",
  "module": "dist/use-localstorage.esm.js",
  "typings": "dist/use-localstorage.d.ts",
  "private": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --entry src/use-localstorage.ts --format cjs,esm",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src --fix",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@buzuosheng/use-localstorage",
  "author": "buzuosheng",
  "size-limit": [
    {
      "path": "dist/use-localstorage.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/addons": "^6.1.20",
    "@storybook/react": "^6.1.20",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/ms": "^0.7.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "husky": "^5.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rollup": "^2.40.0",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0"
  },
  "dependencies": {
    "ms": "^2.1.3"
  }
}
